{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "Dev",
        "vm_name": "Dev",
        "build_name": "Dev",
        "playbook_file": "playbook.yml"
    },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-ovf": {
          "scripts": [
            "scripts/ansible.sh"
            ]
        }
    }
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{user `playbook_file`}}",
      "role_paths": [
        "ansible/roles/base",
        "ansible/roles/zsh",
        "ansible/roles/ops",
        "ansible/roles/dev",
        "ansible/roles/docker",
        "ansible/roles/user"
      ]
    },
    {
      "type": "shell",
      "inline": ["df -h"]
    },
    {
    "type": "shell",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-ovf": {
          "scripts": [
            "scripts/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
          "output": "build/Dev.box"
    }
  ],

    "builders": [{
        "type": "virtualbox-ovf",
        "source_path": "input/box.ovf",
        "vm_name": "{{user `vm_name`}}",
        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",

        "vboxmanage_post": [
            [ "modifyvm", "{{.Name}}", "--name", "Dev" ]
        ],

        "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S shutdown -P now"

    }]
}
